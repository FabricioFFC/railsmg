.last_meeting
  .image
    = image_tag @last_meeting.slide_preview.url(:medium)

  - if @last_meeting.present?
    %h2 Último encontro

    %p
      = @last_meeting.description

    %h3 Conteúdo

    %p
      = link_to "VIDEO", @last_meeting.video, :popup => true
      = link_to "CÓDIGO", @last_meeting.code, :popup => true
      = link_to "SLIDES", @last_meeting.slides, :popup => true
      
.box
  %h2 Apresentações anteriores

  %ul
    - @meetings.each do |meeting|
      %li
        .image
          = image_tag meeting.slide_preview.url(:thumb)

        %h3
          = meeting 
          - if can?(:update, meeting)
            = link_to '(editar)', edit_meeting_path(meeting)
            
        %p
          = truncate(meeting.description, 200)

        %p
          = link_to "VEJA MAIS", meeting